{
  "extends": "@tsconfig/node-lts/tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "removeComments": false,
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "noEmitOnError": true,
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
